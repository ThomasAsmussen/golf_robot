<mujoco model="golf_world">
  <compiler angle="degree"/>   <!-- default is local coordinates -->
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4"/>

  <default>
    <geom rgba="0.8 0.8 0.8 1" condim="3"/>
  </default>

  <asset>
    <!-- simple green and cup colors -->
    <material name="green_mat" rgba="0.2 0.55 0.2 1"/>
    <material name="cup_mat" rgba="0.85 0.85 0.85 1"/>
    <material name="ball_mat" rgba="1 1 1 1"/>
    <material name="club_mat" rgba="0.2 0.2 0.2 1"/>
  </asset>

  <worldbody>
    <!-- GREEN plane (no literal hole; see note in Python logic) -->
    <geom name="green"
          type="plane"
          size="6 4 0.1"
          rgba="0.2 0.9 0.2 1"
          material="green_mat"
          friction="0.8 0.005 8.5"
          pos="0 0 0"/>

    <!-- Hole visuals: a short cylinder wall + a site used for logic/visualization -->
    <body name="hole" pos="2 0 0">
      <site name="hole_center" pos="0 0 0" size="0.055" rgba="0.1 0.1 0.1 0.3" type="sphere"/>
      <!-- A thin ring to hint the cup wall (visual). Make it short so it doesn't block ball. -->
      <geom name="cup_wall"
            type="cylinder"
            fromto="0 0 0  0 0 -0.12"
            size="0.055"
            rgba="0.9 0.9 0.9 0.6"
            material="cup_mat"
            contype="0" conaffinity="0"/> <!-- visual only -->
      <!-- Cup bottom (visual only) -->
      <geom name="cup_bottom"
            type="cylinder"
            fromto="0 0 -0.12  0 0 -0.121"
            size="0.055"
            rgba="0.7 0.7 0.7 0.8"
            contype="0" conaffinity="0"/>
    </body>

    <!-- BALL -->
    <camera name="overview"
            pos="2.0 -3.0 1.5"
            quat="0.7 0.0 0.7 0.0"
            fovy="45"/>
    <body name="ball" pos="0 0 0.02135">
      <freejoint name="ball_free"/>
      <geom name="ball_geom" type="sphere" size="0.02135"
            rgba="0.6 0.2 0.6 1" mass="0.04593" material="ball_mat"
            solref="0.005 1" solimp="0.95 0.99 0.001"
            friction="0.2 0.0001 0.003" condim="6"/>
    </body>

    <!-- CLUB: simple pendulum/hinge with a capsule shaft and small head -->
    <body name="club_base" pos="0.0 0.0 0.4">
      <joint name="club_hinge" type="hinge" axis="0 1 0" damping="2" armature="0.002" range="-180 180"
      limited="true" frictionloss="0.05"/>
      <geom name="club_shaft" type="capsule" mass="1.0" fromto="0 0 0  0 0 -0.36" size="0.01" material="club_mat"/>
      <geom name="club_head" type="box" pos="0.0 0.05 -0.36" mass="0.5" size="0.05 0.02 0.02" material="club_mat"/>
    </body>
  </worldbody>

  <actuator>
    <motor name="club_motor" joint="club_hinge" gear="8.0"/>
  </actuator>
</mujoco>
